<form class="settings-form">
    <div class="settings-form__photo-part">
        <div class="settings-form__user-name">
            <textarea id="name" class="settings-form__input-name input__data-input input__data-input_text">{{this.user.name}}</textarea>
            <span id="age">{{this.user.age}}</span>
        </div>
        <div class="settings-form__photo">
            {{#if this.user.image_path}}
                <img src="https://umlaut-bmstu.me/api/v1/user/{{this.user.id}}/photo" id="user-photo" alt="">
            {{else}}
                <img src="/pics/avatar.png" id="user-photo" alt="">
            {{/if}}
        </div>
        <div class="settings-form__buttons-photo-setting">
            <button type="button" class="btn settings-form__delete-btn">удалить</button>
            <input type="file" id="file" style="display: none;" accept="image/*" />
            <button type="button" class="btn settings-form__add-btn" onclick="document.getElementById('file').click()">добавить фото</button>
        </div>
    </div>
    <div class="description-settings description">
        <div class="description-settings__about-user">
            <div class="input">
                <span class="input__header">Ваш пол</span>
                <select class="input__data-input"  id="user_gender">
                    {{#if this.user.hasGender}}
                        {{#if this.user.user_gender}}
                            <option value="" selected="selected">Мужской</option>
                            <option value="">Женский</option>
                        {{else}}
                            <option value="" selected="selected">Женский</option>
                            <option value="">Мужской</option>
                        {{/if}} 
                    {{else}}
                        <option value="" selected="selected"></option>
                        <option value="">Женский</option>
                        <option value="">Мужской</option>
                    {{/if}}
                </select>
            </div>
            <div class="input">
                <span class="input__header">Кого ищете</span>
                <select class="input__data-input"  id="prefer_gender">
                    {{#if this.user.hasPreferGender}}
                        {{#if this.user.prefer_gender}}
                            <option value="" selected="selected">Мужчин</option>
                            <option value="">Женщин</option>
                        {{else}}
                            <option value="" selected="selected">Женщин</option>
                            <option value="">Мужчин</option>
                        {{/if}} 
                    {{else}}
                        <option value="" selected="selected"></option>
                        <option value="">Мужчин</option>
                        <option value="">Женщин</option>
                    {{/if}}
                </select>
            </div>
            <div class="input">
                <span class="input__header">Цель</span>
                <select class="input__data-input"  id="looking">
                    {{#if this.user.looking}}
                        <option value="" selected="selected">{{this.user.looking}}</option>
                    {{else}}
                        <option value="" selected="selected"></option>
                    {{/if}} 
                    {{#each this.goals}}
                        <option value="">{{this}}</option>
                    {{/each}} 
                </select>
            </div>
            <div class="input">
                <span class="input__header">Образование</span>
                <select class="input__data-input"  id="education">
                    {{#if this.user.education}}
                        <option value="" selected="selected">{{this.user.education}}</option>
                    {{else}}
                        <option value="" selected="selected"></option>
                    {{/if}} 
                    {{#each this.educations}}
                        <option value="">{{this}}</option>
                    {{/each}} 
                </select>
            </div>
            <div class="input">
                <span class="input__header">Интересы</span>
                <select class="input__data-input"  id="hobbies">
                    {{#if this.user.hobbies}}
                        <option value="" selected="selected">{{this.user.hobbies}}</option>
                        {{else}}
                        <option value="" selected="selected"></option>
                    {{/if}} 
                    {{#each this.interests}}
                        <option value="">{{this}}</option>
                    {{/each}} 
                </select>
            </div>
            {{!-- <div class="input">
                <span class="input__header">Теги</span>
                <select class="input__data-input" id="tags">
                    {{#if this.user.tags}}
                        <option value="" selected="selected">{{this.user.tags}}</option>
                    {{/if}} 
                    {{#each this.tags}}
                        <option value="">{{this}}</option>
                    {{/each}} 
                </select>
            </div> --}}
            <div class="input">
                <span class="input__header">Дата рождения</span>
                    <input id="birthday" type="date" class="input__data-input input__data-input_date" name="partydate" value='{{this.user.birthday}}'/>
                </select>
            </div>
            <div class="input">
                <span class="input__header">О себе</span>
                    <textarea class="input__data-input input__data-input_text" id="description">{{this.user.description}}</textarea>
                </select>
            </div>
            <div class="error-label"></div>
            <button type="submit" class="btn settings-form__save-btn">сохранить</button>
        </div>
    </div>
    <div class="description-settings description">
        <h2>Смена данных для входа</h2>
        <div class="description-settings__about-user">
            <div class="input">
                <span class="input__header">Почта</span>
                    <textarea class="input__data-input input__data-input_text" id="mail">{{this.user.mail}}</textarea>
                </select>
            </div>
            <div class="input">
                <span class="input__header">Пароль</span>
                    <input type="password" class="input__data-input input__data-input_password" id="password" autocomplete="new-password">
                </select>
            </div>
            <div class="input">
                <span class="input__header">Повторите пароль</span>
                    <input type="password" class="input__data-input input__data-input_password" id="repeat-password">
                </select>
            </div>
        </div>
    </div>
</form>
<div class="logout">
    <img src="../pics/logout.png" id="logout">
</div>
